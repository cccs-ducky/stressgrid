# Phoenix Server Configuration
PHX_SERVER=true
SECRET_KEY_BASE=your_secret_key_base_here_minimum_64_characters_long_for_security_purposes
PHX_HOST=localhost
PORT=4000

# Application Ports
GENERATORS_PORT=9696
MANAGEMENT_PORT=8000

# Reporting Configuration
REPORT_INTERVAL_SECONDS=60
REPORT_WRITERS=csv,cloudwatch,statsd

# StatsD/Telemetry Configuration
STATSD_PREFIX=stressgrid
STATSD_HOST=localhost
COORDINATOR_TELEMETRY_MTU=1432
COORDINATOR_TELEMETRY_BUFFER_FLUSH_MS=1000
# COORDINATOR_TELEMETRY_POOL_SIZE defaults to System.schedulers_online() if not set
COORDINATOR_TELEMETRY_POOL_SIZE=4

# AWS Configuration (for CloudWatch reporting)
AWS_REGION=us-east-1