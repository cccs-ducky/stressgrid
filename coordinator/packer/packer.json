{
  "variables": {
    "git_hash": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-west-1",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "stressgrid-coordinator-amd64-{{user `git_hash`}}",
      "ami_description": "Stressgrid Coordinator ({{user `git_hash`}})",
      "ami_regions": ["us-east-1", "us-east-2", "us-west-2"],
      "ami_groups": ["all"]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../_build/prod/rel/coordinator/releases/0.1.0/coordinator.tar.gz",
      "destination": "/tmp/coordinator.tar.gz"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo {{ .Path }}",
      "script": "init.sh"
    }
  ]
}